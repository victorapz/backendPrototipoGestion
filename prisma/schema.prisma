generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  nombre           String
  correoElectronico String  @unique
  contrasena       String
  telefono         String?
  rol              Rol      @default(USER)
  creado_en        DateTime @default(now())
  actualizado_en   DateTime @updatedAt
}

enum Rol {
  ADMIN
  USER
}
